import java.util.Scanner;

public class GeneradorEscalera {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese el número de niveles: ");
        int n = sc.nextInt();

        if (n < 1) {
            System.out.println("Error: El número debe ser mayor o igual a 1.");
            return;
        }

        System.out.println("\nEscalera Ascendente:");
        imprimirAscendente(n);

        System.out.println("\nEscalera Descendente:");
        imprimirDescendenteRecursivo(n - 1);

        sc.close();
    }

    // Procedimiento para la parte ascendente
    public static void imprimirAscendente(int niveles) {
        for (int i = 1; i <= niveles; i++) {
            imprimirLinea(i);
        }
    }

    // Procedimiento para la parte descendente (recursivo)
    public static void imprimirDescendenteRecursivo(int nivel) {
        if (nivel < 1) return;
        imprimirLinea(nivel);
        imprimirDescendenteRecursivo(nivel - 1);
    }

    // Método sobrecargado 1
    public static void imprimirLinea(int nivel) {
        for (int i = 1; i <= nivel; i++) {
            System.out.print(i + " ");
        }
        System.out.println();
    }

    // Método sobrecargado 2
    public static void imprimirLinea(int nivel, char simbolo) {
        for (int i = 1; i <= nivel; i++) {
            System.out.print(simbolo + " ");
        }
        System.out.println();
    }
}
